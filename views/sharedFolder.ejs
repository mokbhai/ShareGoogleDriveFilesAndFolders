<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shared Folder - <%= folderName %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <style>
      .mobile-preview {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        background: #f5f5f5;
        padding: 20px;
      }

      .pdf-icon {
        font-size: 48px;
        color: #ff4444;
        margin-bottom: 15px;
      }

      .download-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: #0066cc;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
      }

      .download-btn i {
        font-size: 16px;
      }

      .preview-container {
        min-height: 200px;
        border: 1px solid #ddd;
        border-radius: 4px;
        overflow: hidden;
      }

      .fallback {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        background: #f5f5f5;
        padding: 20px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="page-wrapper">
      <header>
        <div class="container header-content">
          <h1 class="header-title"><%= folderName %></h1>
          <div class="header-stats">
            <%= folders.length %> folders, <%= files.length %> documents
          </div>
        </div>
      </header>

      <main class="container">
        <!-- Breadcrumbs -->
        <nav class="breadcrumbs">
          <ol>
            <% breadcrumbs.forEach((crumb, index) => { %>
            <li>
              <% if (index === breadcrumbs.length - 1) { %>
              <span><%= crumb.name %></span>
              <% } else { %>
              <a href="/share/<%= token %>?folderId=<%= crumb.id %>"
                ><%= crumb.name %></a
              >
              <% if (index < breadcrumbs.length - 1) { %>
              <span class="breadcrumb-separator">â€º</span>
              <% } %> <% } %>
            </li>
            <% }); %>
          </ol>
        </nav>

        <% if (folders.length > 0 || files.length > 0) { %>
        <!-- Folders Section -->
        <% if (folders.length > 0) { %>
        <section>
          <h2 class="section-title">Folders</h2>
          <div class="folder-grid">
            <% folders.forEach(folder => { %>
            <a
              href="/share/<%= token %>?folderId=<%= folder.id %>"
              class="folder-item"
            >
              <i class="fas fa-folder folder-icon"></i>
              <div class="folder-details">
                <div class="folder-name"><%= folder.name %></div>
                <div class="folder-date">
                  <%= new Date(folder.createdTime).toLocaleDateString() %>
                </div>
              </div>
            </a>
            <% }); %>
          </div>
        </section>
        <% } %>

        <!-- Files Section -->
        <% if (files.length > 0) { %>
        <section>
          <h2 class="section-title">PDF Files</h2>
          <div class="file-grid">
            <% files.forEach(file => { %>
            <article class="file-card">
              <div class= "<%= isMobile ? '' : 'preview-container' %>">
                <% if (file.previewUrl) { %> <% if (isMobile) { %>
                <!-- For mobile devices, show a download button -->
                <!-- <div class="mobile-preview">
                  <i class="fas fa-file-pdf pdf-icon"></i>
                  <a href="<%= file.downloadUrl %>" class="download-btn">
                    <i class="fas fa-download"></i>
                    Download PDF
                  </a>
                </div> -->
                <% } else { %>
                <!-- For desktop, show PDF preview -->
                <object
                  data="<%= file.previewUrl %>"
                  type="application/pdf"
                  width="100%"
                  height="100%"
                >
                  <div class="fallback">
                    <p>
                      Unable to display PDF.
                      <a href="<%= file.downloadUrl %>">Download</a> instead.
                    </p>
                  </div>
                </object>
                <% } %> <% } else { %>
                <div class="fallback">
                  <i class="fas fa-file-pdf"></i>
                </div>
                <% } %>
              </div>

              <div class="file-content">
                <div class="file-header">
                  <h3 class="file-title"><%= file.name %></h3>
                  <span class="file-size"><%= file.formattedSize %></span>
                </div>

                <div class="file-date">
                  <i class="far fa-calendar-alt"></i>
                  <%= new Date(file.createdTime).toLocaleDateString('en-US', {
                  year: 'numeric', month: 'long', day: 'numeric' }) %>
                </div>

                <div class="file-actions">
                  <a
                    href="<%= isMobile ? 'https://docs.google.com/viewer?url=https://' + host + file.previewUrl :  file.previewUrl %>"
                    target="_blank"
                    class="btn btn-primary"
                  >
                    <i class="far fa-eye"></i>
                    Preview
                  </a>
                  <a href="<%= file.downloadUrl %>" class="btn btn-secondary">
                    <i class="fas fa-download"></i>
                    Download
                  </a>
                </div>
              </div>
            </article>
            <% }); %>
          </div>
        </section>
        <% } %> <% } else { %>
        <div class="empty-state">
          <i class="fas fa-folder-open empty-icon"></i>
          <h2 class="empty-title">No Files Found</h2>
          <p class="empty-description">This folder is empty</p>
        </div>
        <% } %>
      </main>
    </div>
  </body>
</html>
